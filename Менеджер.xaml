<Window x:Class="Швейная_фабрика.Менеджер"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Швейная_фабрика"
        mc:Ignorable="d" 
        Title="Окно менеджера" Height="300" Width="400" Icon="/logo-02.jpg"
        Background="#FFFCD6">
    <Grid>
        <Button Click="Button_Click" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button.Content>
                <TextBlock Text="Выход" Style="{StaticResource Button}"/>
            </Button.Content>
        </Button>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Click="Button_Click_1">
                <Button.Content>
                    <TextBlock Text="Список изделий" Style="{StaticResource Button}"/>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</Window>

