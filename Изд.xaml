<Window x:Class="Швейная_фабрика.Изд"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Швейная_фабрика"
        mc:Ignorable="d"
        Title="Просмотр изделий" Height="300" Width="500" Icon="/logo-02.jpg"
        Background="#FFFCD6">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Margin="10" Grid.Column="0"/>
        <StackPanel Orientation="Vertical" Margin="10 0" VerticalAlignment="Center" Grid.Column="1">
            <TextBlock Text="Свойства изделия:"/>
            <ListBox x:Name="lb1"/>
            <TextBlock Text="История изменений"/>
            <ListBox x:Name="lb2"/>
            <Button Click="Button_Click">
                <Button.Content>
                    <TextBlock Text="Выход" Style="{StaticResource Button}"></TextBlock>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</Window>
